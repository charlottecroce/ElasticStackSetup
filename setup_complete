#!/bin/bash
#
# Process:
# - runs the setup script for each individual program
# - starts each program
# - runs the status_Elastic_services script, displaying current status of each program

CYAN='\033[1;36m'

#setup
echo "${CYAN}Starting setup_elasticsearch..."
bash setup_elasticsearch
echo "${CYAN}Completed setup_elasticsearch"

echo "${CYAN}Starting setup_kibana..."
bash setup_kibana
echo "${CYAN}Completed setup_kibana"

echo "${CYAN}Starting setup_logstash..."
bash setup_logstash
echo "${CYAN}Completed setup_logstash"

echo "${CYAN}Starting setup_filebeat..."
bash setup_filebeat
echo "${CYAN}Completed setup_filebeat"

echo "${CYAN}Setup Complete. Starting services"

#start

echo "${CYAN}Starting elasticsearch..."
systemctl start elasticsearch.service

echo "${CYAN}Starting kibana..."
systemctl start kibana.service

echo "${CYAN}Starting logstash..."
systemctl start logstash.service

echo "${CYAN}Starting filebeat..."
systemctl start filebeat.service

bash status_Elastic_services.bash

