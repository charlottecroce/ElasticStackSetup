#  in progress
##



#!/bin/sh

#installation
apt-get install filebeat -y

#configuration
sed '/output.elasticsearch:/ s/^/#/' -i /etc/filebeat/filebeat.yml


sed '/.*hosts: ["localhost:9200"]/ s/^/#/' -i /etc/filebeat/filebeat.yml
sed -i 's/.*output.logstash:/output.logstash:/' /etc/filebeat/filebeat.yml
sed -i 's/.*hosts: ["localhost:5044"]/enabled: true\nhosts: [“127.0.0.1:5044”]/' /etc/filebeat/filebeat.yml


filebeat modules enable system
filebeat modules enable logstash
filebeat setup --pipelines --modules system

#enable
systemctl enable filebeat
